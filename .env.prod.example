# Production Environment Variables
# Copy this to .env.prod and fill in with your actual production values

# PostgreSQL Configuration
POSTGRES_USER=gems
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=gems_of_india

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD

# Application URLs
NEXT_PUBLIC_URL=https://yourdomain.com
NEXT_PUBLIC_CONTACT_EMAIL=contact@yourdomain.com

# Authentication
BETTER_AUTH_URL=https://yourdomain.com
BETTER_AUTH_SECRET=CHANGE_ME_SECURE_SECRET_MIN_32_CHARS

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_CLIENT_ID=your_production_google_client_id

# Cloudflare Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_production_turnstile_site_key
TURNSTILE_SECRET_KEY=your_production_turnstile_secret_key

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
DISCORD_LAUNCH_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Email (Resend)
RESEND_API_KEY=re_production_key

# Cron Jobs
CRON_API_KEY=your_production_cron_api_key

# UploadThing
NEXT_PUBLIC_UPLOADTHING_URL=your_production_uploadthing_url
UPLOADTHING_TOKEN=your_production_uploadthing_token
UPLOADTHING_CALLBACK_URL=/api/uploadthing

# Plausible
PLAUSIBLE_API_KEY=your_production_plausible_key
PLAUSIBLE_URL=https://plausible.io
PLAUSIBLE_SITE_ID=yourdomain.com

# Google AI (Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=your_production_google_ai_api_key
